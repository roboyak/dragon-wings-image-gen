<%# Sidebar Navigation - Midjourney-inspired, using Dragon Wings Design System %>
<%# Classes from dragon_wings_design_system.css: dw-sidebar, dw-sidebar-item, etc. %>

<aside class="dw-sidebar" id="sidebar">
  <%# Header: Logo & App Name %>
  <div class="dw-sidebar-header">
    <div class="flex items-center gap-3">
      <%= image_tag "dragon_wings_logo.png", alt: "Dragon Wings", class: "w-8 h-8" %>
      <div>
        <h1 class="text-sm font-semibold font-grotesk" style="color: hsl(var(--foreground));">Dragon Wings</h1>
        <p class="text-xs" style="color: hsl(var(--muted-foreground));">Image Generator</p>
      </div>
    </div>
  </div>

  <%# Main Navigation %>
  <nav class="dw-sidebar-content">
    <%# GENERATE Section %>
    <div class="mb-4">
      <p class="text-xs font-medium uppercase tracking-wider mb-2 px-3" style="color: hsl(var(--muted-foreground));">Generate</p>

      <% pending_count = current_user.images.where(status: ['pending', 'processing']).count %>

      <%= link_to images_path, class: "dw-sidebar-item #{current_page?(images_path) && params[:view].blank? ? 'dw-sidebar-item-active' : ''}" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>Create</span>
      <% end %>

      <%# Expandable Queue List %>
      <% if pending_count > 0 %>
        <div class="queue-section mt-1">
          <button onclick="toggleQueueList()" class="w-full dw-sidebar-item text-xs justify-between" style="padding-left: 2.5rem;">
            <span class="flex items-center gap-2">
              <svg class="w-3 h-3 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: hsl(var(--primary));">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Queue (<%= pending_count %>)
            </span>
            <svg id="queue-chevron" class="w-3 h-3 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <div id="queue-list" class="hidden mt-1 space-y-1" style="padding-left: 1rem;">
            <% current_user.images.where(status: ['pending', 'processing']).order(created_at: :asc).limit(5).each_with_index do |img, idx| %>
              <div class="queue-item flex items-center gap-2 p-2 rounded-lg transition-colors hover:bg-white/5" style="background-color: hsl(var(--muted) / 0.3);">
                <%# Thumbnail or placeholder %>
                <div class="w-8 h-8 rounded flex-shrink-0 flex items-center justify-center overflow-hidden" style="background-color: hsl(var(--muted));">
                  <% if img.status == 'processing' %>
                    <svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: hsl(var(--primary));">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                  <% else %>
                    <span class="text-[10px] font-bold" style="color: hsl(var(--muted-foreground));">#<%= idx + 1 %></span>
                  <% end %>
                </div>

                <%# Prompt & Status %>
                <div class="flex-1 min-w-0">
                  <p class="text-[10px] truncate" style="color: hsl(var(--foreground));">
                    <%= img.prompt&.truncate(25) || "Generating..." %>
                  </p>
                  <p class="text-[9px]" style="color: <%= img.status == 'processing' ? 'hsl(var(--primary))' : 'hsl(var(--muted-foreground))' %>;">
                    <%= img.status == 'processing' ? 'Generating...' : "Queued ##{idx + 1}" %>
                  </p>
                </div>

                <%# Cancel button %>
                <button onclick="cancelGeneration(<%= img.id %>)" class="p-1 rounded transition-colors hover:bg-red-500/20" title="Cancel" aria-label="Cancel generation" style="color: hsl(var(--muted-foreground));">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <a href="#" class="dw-sidebar-item">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
        </svg>
        <span>Edit</span>
        <span class="ml-auto text-xs px-1.5 py-0.5 rounded" style="background-color: hsl(var(--muted)); color: hsl(var(--muted-foreground));">Soon</span>
      </a>
    </div>

    <%# LIBRARY Section %>
    <div class="mb-4">
      <p class="text-xs font-medium uppercase tracking-wider mb-2 px-3" style="color: hsl(var(--muted-foreground));">Library</p>

      <%= link_to images_path(view: 'gallery'), class: "dw-sidebar-item #{params[:view] == 'gallery' ? 'dw-sidebar-item-active' : ''}" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>Gallery</span>
      <% end %>

      <%= link_to images_path(view: 'history'), class: "dw-sidebar-item #{params[:view] == 'history' ? 'dw-sidebar-item-active' : ''}" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>History</span>
      <% end %>

      <%= link_to images_path(view: 'favorites'), class: "dw-sidebar-item #{params[:view] == 'favorites' ? 'dw-sidebar-item-active' : ''}" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <span>Favorites</span>
      <% end %>
    </div>

    <%# SETTINGS Section %>
    <div class="mb-4">
      <p class="text-xs font-medium uppercase tracking-wider mb-2 px-3" style="color: hsl(var(--muted-foreground));">Settings</p>

      <%= link_to models_path, class: "dw-sidebar-item #{current_page?(models_path) ? 'dw-sidebar-item-active' : ''}" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        <span>Models</span>
      <% end %>

      <%= link_to edit_user_registration_path, class: "dw-sidebar-item #{current_page?(edit_user_registration_path) ? 'dw-sidebar-item-active' : ''}" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span>Account</span>
      <% end %>
    </div>
  </nav>

  <%# Footer: User Info %>
  <div class="dw-sidebar-footer">
    <div class="flex items-center gap-3">
      <div class="dw-avatar">
        <%= current_user.email.first.upcase %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium truncate" style="color: hsl(var(--foreground));">
          <%= current_user.email.split('@').first %>
        </p>
        <p class="text-xs truncate" style="color: hsl(var(--muted-foreground));">
          <span style="color: hsl(var(--primary));"><%= current_user.generations_today %></span>/<%= current_user.generation_quota %> today
        </p>
      </div>
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "p-1.5 rounded transition-colors hover:bg-white/10", title: "Sign out", "aria-label": "Sign out" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: hsl(var(--muted-foreground));" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
      <% end %>
    </div>
  </div>
</aside>

<%# ========================================== %>
<%# MOBILE NAVIGATION DRAWER %>
<%# ========================================== %>

<%# Mobile Menu Button - Fixed position, visible only on mobile %>
<button id="mobile-menu-btn"
        type="button"
        onclick="toggleMobileNav()"
        class="lg:hidden fixed top-3 left-3 z-50 p-2.5 rounded-lg transition-all duration-200 hover:scale-105"
        style="background-color: hsl(var(--card)); border: 1px solid hsl(var(--border));"
        aria-label="Open navigation menu">
  <svg id="menu-icon" class="w-5 h-5 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: hsl(var(--foreground));">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
  </svg>
</button>

<%# Dark Overlay Backdrop with fade animation %>
<div id="mobile-nav-overlay"
     onclick="toggleMobileNav()"
     class="lg:hidden fixed inset-0 z-40 bg-black/60 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-200"
     aria-hidden="true">
</div>

<%# Mobile Drawer - Slides in from left %>
<aside id="mobile-nav-drawer"
       class="lg:hidden fixed left-0 top-0 bottom-0 z-50 w-72 transform -translate-x-full transition-transform duration-300 ease-out flex flex-col"
       style="background-color: hsl(var(--sidebar));"
       aria-label="Mobile navigation">

  <%# Drawer Header with close button %>
  <div class="flex items-center justify-between p-4 border-b" style="border-color: hsl(var(--sidebar-border));">
    <div class="flex items-center gap-3">
      <%= image_tag "dragon_wings_logo.png", alt: "Dragon Wings", class: "w-8 h-8" %>
      <div>
        <h1 class="text-sm font-semibold font-grotesk" style="color: hsl(var(--foreground));">Dragon Wings</h1>
        <p class="text-xs" style="color: hsl(var(--muted-foreground));">Image Generator</p>
      </div>
    </div>
    <button onclick="toggleMobileNav()" class="p-2 rounded-lg transition-colors hover:bg-white/10" aria-label="Close menu">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: hsl(var(--foreground));">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <%# Navigation Content - Same as desktop %>
  <nav class="flex-1 overflow-y-auto p-3">
    <%# GENERATE Section %>
    <div class="mb-4">
      <p class="text-xs font-medium uppercase tracking-wider mb-2 px-3" style="color: hsl(var(--muted-foreground));">Generate</p>
      <%= link_to images_path, class: "dw-sidebar-item #{current_page?(images_path) && params[:view].blank? ? 'dw-sidebar-item-active' : ''}", onclick: "toggleMobileNav()" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>Create</span>
      <% end %>
      <a href="#" class="dw-sidebar-item" onclick="toggleMobileNav()">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
        </svg>
        <span>Edit</span>
        <span class="ml-auto text-xs px-1.5 py-0.5 rounded" style="background-color: hsl(var(--muted)); color: hsl(var(--muted-foreground));">Soon</span>
      </a>
    </div>

    <%# LIBRARY Section %>
    <div class="mb-4">
      <p class="text-xs font-medium uppercase tracking-wider mb-2 px-3" style="color: hsl(var(--muted-foreground));">Library</p>
      <%= link_to images_path(view: 'gallery'), class: "dw-sidebar-item #{params[:view] == 'gallery' ? 'dw-sidebar-item-active' : ''}", onclick: "toggleMobileNav()" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>Gallery</span>
      <% end %>
      <%= link_to images_path(view: 'history'), class: "dw-sidebar-item #{params[:view] == 'history' ? 'dw-sidebar-item-active' : ''}", onclick: "toggleMobileNav()" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>History</span>
      <% end %>
      <%= link_to images_path(view: 'favorites'), class: "dw-sidebar-item #{params[:view] == 'favorites' ? 'dw-sidebar-item-active' : ''}", onclick: "toggleMobileNav()" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <span>Favorites</span>
      <% end %>
    </div>

    <%# SETTINGS Section %>
    <div class="mb-4">
      <p class="text-xs font-medium uppercase tracking-wider mb-2 px-3" style="color: hsl(var(--muted-foreground));">Settings</p>
      <%= link_to models_path, class: "dw-sidebar-item #{current_page?(models_path) ? 'dw-sidebar-item-active' : ''}", onclick: "toggleMobileNav()" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        <span>Models</span>
      <% end %>
      <%= link_to edit_user_registration_path, class: "dw-sidebar-item #{current_page?(edit_user_registration_path) ? 'dw-sidebar-item-active' : ''}", onclick: "toggleMobileNav()" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span>Account</span>
      <% end %>
    </div>
  </nav>

  <%# Drawer Footer - User info %>
  <div class="p-4 border-t" style="border-color: hsl(var(--sidebar-border));">
    <div class="flex items-center gap-3">
      <div class="dw-avatar">
        <%= current_user.email.first.upcase %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium truncate" style="color: hsl(var(--foreground));">
          <%= current_user.email.split('@').first %>
        </p>
        <p class="text-xs" style="color: hsl(var(--muted-foreground));">
          <span style="color: hsl(var(--primary));"><%= current_user.generations_today %></span>/<%= current_user.generation_quota %> today
        </p>
      </div>
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "p-1.5 rounded transition-colors hover:bg-white/10", title: "Sign out", "aria-label": "Sign out", onclick: "toggleMobileNav()" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: hsl(var(--muted-foreground));" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
      <% end %>
    </div>
  </div>
</aside>

<script>
  // Mobile Navigation Toggle
  let mobileNavOpen = false;

  function toggleMobileNav() {
    const drawer = document.getElementById('mobile-nav-drawer');
    const overlay = document.getElementById('mobile-nav-overlay');
    const menuBtn = document.getElementById('mobile-menu-btn');

    mobileNavOpen = !mobileNavOpen;

    if (mobileNavOpen) {
      // Open drawer
      drawer.classList.remove('-translate-x-full');
      overlay.classList.remove('opacity-0', 'pointer-events-none');
      overlay.classList.add('opacity-100', 'pointer-events-auto');
      document.body.style.overflow = 'hidden';
      menuBtn.style.opacity = '0';
      menuBtn.style.pointerEvents = 'none';
    } else {
      // Close drawer
      drawer.classList.add('-translate-x-full');
      overlay.classList.add('opacity-0', 'pointer-events-none');
      overlay.classList.remove('opacity-100', 'pointer-events-auto');
      document.body.style.overflow = '';
      menuBtn.style.opacity = '1';
      menuBtn.style.pointerEvents = 'auto';
    }
  }

  // Close on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && mobileNavOpen) {
      toggleMobileNav();
    }
  });

  // Close if window resizes to desktop
  window.addEventListener('resize', function() {
    if (window.innerWidth >= 1024 && mobileNavOpen) {
      toggleMobileNav();
    }
  });

  // Queue List Toggle
  function toggleQueueList() {
    const list = document.getElementById('queue-list');
    const chevron = document.getElementById('queue-chevron');
    if (list && chevron) {
      list.classList.toggle('hidden');
      chevron.style.transform = list.classList.contains('hidden') ? '' : 'rotate(180deg)';
    }
  }

  // Cancel Generation
  function cancelGeneration(imageId) {
    if (!confirm('Cancel this generation?')) return;
    fetch(`/images/${imageId}`, {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      if (response.ok) {
        window.location.reload();
      } else {
        alert('Failed to cancel generation. Please try again.');
      }
    })
    .catch(err => {
      console.error('Cancel failed:', err);
      alert('Failed to cancel generation. Please try again.');
    });
  }
</script>
