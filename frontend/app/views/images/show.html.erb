<div class="min-h-screen p-8" style="background-color: hsl(var(--background));">
  <div class="max-w-6xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to images_path, class: "inline-flex items-center text-sm transition-colors", style: "color: hsl(var(--muted-foreground)); hover:color: hsl(var(--foreground));" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Gallery
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column: Image Display (2/3 width) -->
      <div class="lg:col-span-2">
        <div class="p-6 rounded-lg border" style="background-color: hsl(var(--card)); border-color: hsl(var(--border));">
          <% if @image.completed? && @image.image_url.present? %>
            <%= image_tag @image.image_url,
                alt: @image.prompt,
                class: "w-full h-auto rounded-lg shadow-lg" %>
          <% elsif @image.failed? %>
            <div class="w-full h-96 flex items-center justify-center rounded-lg" style="background-color: hsl(var(--destructive) / 0.1);">
              <div class="text-center">
                <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: hsl(var(--destructive));">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p class="text-lg font-semibold mb-2" style="color: hsl(var(--destructive));">Generation Failed</p>
                <p class="text-sm" style="color: hsl(var(--muted-foreground));">
                  <%= @image.metadata['error'] || 'An error occurred during generation' %>
                </p>
              </div>
            </div>
          <% else %>
            <div class="w-full h-96 flex items-center justify-center rounded-lg" style="background-color: hsl(var(--muted) / 0.2);">
              <div class="text-center">
                <div class="inline-block w-16 h-16 border-4 border-t-transparent rounded-full animate-spin mb-4" style="border-color: hsl(var(--primary)); border-top-color: transparent;"></div>
                <p class="text-lg font-semibold" style="color: hsl(var(--primary));">
                  <%= @image.status_display %>
                </p>
                <p class="text-sm mt-2" style="color: hsl(var(--muted-foreground));">
                  This may take 1-3 minutes...
                </p>
              </div>
            </div>
          <% end %>

          <!-- Download Button (only for completed images) -->
          <% if @image.completed? && @image.image_url.present? %>
            <div class="mt-4">
              <%= link_to @image.image_url,
                  download: "dragon-wings-#{@image.id}.png",
                  target: "_blank",
                  class: "inline-flex items-center px-6 py-3 rounded-lg font-semibold transition-colors",
                  style: "background-color: hsl(var(--primary)); color: hsl(var(--primary-foreground));" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Download Image
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Right Column: Image Details (1/3 width) -->
      <div class="space-y-6">
        <!-- Status Card -->
        <div class="p-6 rounded-lg border" style="background-color: hsl(var(--card)); border-color: hsl(var(--border));">
          <h3 class="text-lg font-bold mb-4" style="color: hsl(var(--foreground));">Status</h3>
          <div class="space-y-3">
            <div>
              <p class="text-xs mb-1" style="color: hsl(var(--muted-foreground));">Current Status</p>
              <p class="px-3 py-2 rounded inline-block capitalize <%= @image.completed? ? 'bg-green-500/20 text-green-400' : @image.failed? ? 'bg-red-500/20 text-red-400' : 'bg-yellow-500/20 text-yellow-400' %>">
                <%= @image.status_display %>
              </p>
            </div>
            <div>
              <p class="text-xs mb-1" style="color: hsl(var(--muted-foreground));">Created</p>
              <p class="text-sm" style="color: hsl(var(--foreground));">
                <%= @image.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </p>
            </div>
            <% if @image.updated_at != @image.created_at %>
              <div>
                <p class="text-xs mb-1" style="color: hsl(var(--muted-foreground));">Last Updated</p>
                <p class="text-sm" style="color: hsl(var(--foreground));">
                  <%= time_ago_in_words(@image.updated_at) %> ago
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Prompt Card -->
        <div class="p-6 rounded-lg border" style="background-color: hsl(var(--card)); border-color: hsl(var(--border));">
          <h3 class="text-lg font-bold mb-4" style="color: hsl(var(--foreground));">Prompt</h3>
          <p class="text-sm leading-relaxed" style="color: hsl(var(--foreground));">
            <%= @image.prompt %>
          </p>

          <% if @image.negative_prompt.present? %>
            <div class="mt-4 pt-4 border-t" style="border-color: hsl(var(--border));">
              <p class="text-xs mb-2" style="color: hsl(var(--muted-foreground));">Negative Prompt</p>
              <p class="text-sm" style="color: hsl(var(--muted-foreground));">
                <%= @image.negative_prompt %>
              </p>
            </div>
          <% end %>
        </div>

        <!-- Generation Settings Card -->
        <div class="p-6 rounded-lg border" style="background-color: hsl(var(--card)); border-color: hsl(var(--border));">
          <h3 class="text-lg font-bold mb-4" style="color: hsl(var(--foreground));">Settings</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span style="color: hsl(var(--muted-foreground));">Dimensions</span>
              <span style="color: hsl(var(--foreground));"><%= @image.width %>x<%= @image.height %></span>
            </div>
            <div class="flex justify-between">
              <span style="color: hsl(var(--muted-foreground));">Inference Steps</span>
              <span style="color: hsl(var(--foreground));"><%= @image.num_inference_steps %></span>
            </div>
            <div class="flex justify-between">
              <span style="color: hsl(var(--muted-foreground));">Guidance Scale</span>
              <span style="color: hsl(var(--foreground));"><%= @image.guidance_scale %></span>
            </div>
            <% if @image.seed.present? %>
              <div class="flex justify-between">
                <span style="color: hsl(var(--muted-foreground));">Seed</span>
                <span style="color: hsl(var(--foreground));"><%= @image.seed %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Delete Button -->
        <div class="p-6 rounded-lg border" style="background-color: hsl(var(--card)); border-color: hsl(var(--border));">
          <%= button_to "Delete Image",
              image_path(@image),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this image?" },
              class: "w-full px-6 py-3 rounded-lg font-semibold transition-colors",
              style: "background-color: hsl(var(--destructive)); color: hsl(var(--destructive-foreground));" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Auto-refresh for pending/processing images -->
<% unless @image.generation_complete? %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const imageId = <%= @image.id %>;

      // Poll every 3 seconds
      const pollInterval = setInterval(function() {
        fetch(`/images/${imageId}/status`)
          .then(response => response.json())
          .then(data => {
            if (data.generation_complete) {
              // Reload page to show completed image
              window.location.reload();
            }
          })
          .catch(error => console.error('Status check failed:', error));
      }, 3000);
    });
  </script>
<% end %>
