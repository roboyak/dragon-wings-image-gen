<div class="flex items-center justify-center min-h-[70vh]">
  <div class="w-full max-w-md">
    <div class="bg-slate-800 border border-slate-700 rounded-lg p-8">
      <div class="text-center mb-6">
        <h1 class="text-3xl font-bold mb-2">
          üêâ Dragon Wings AI
        </h1>
        <p class="text-slate-400">Sign in to your account</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded-lg text-slate-100 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded-lg text-slate-100 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-6 flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 bg-slate-900 border-slate-600 rounded text-sky-500 focus:ring-sky-500 focus:ring-2" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-slate-300" %>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.submit "Sign In",
              class: "w-full bg-sky-500 hover:bg-sky-600 text-white font-semibold py-2 px-4 rounded-lg transition cursor-pointer" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
