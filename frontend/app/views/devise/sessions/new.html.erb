<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <!-- Dark Mode Toggle -->
  <button id="dark-mode-toggle" class="fixed top-4 right-4 px-4 py-2 rounded-lg border hover-elevate transition-all" style="background-color: hsl(var(--card)); border-color: hsl(var(--border));">
    <span id="theme-icon">â˜€ï¸</span>
  </button>

  <div class="max-w-md w-full space-y-8 rounded-2xl border p-10" style="background-color: hsl(var(--card)); border-color: hsl(var(--card-border)); box-shadow: var(--shadow-xl);">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-4xl font-bold" style="color: hsl(var(--primary));">
        Dragon Wings AI Image Generator
      </h1>
      <h2 class="mt-6 text-3xl font-extrabold" style="color: hsl(var(--card-foreground));">
        Sign in to your account
      </h2>
      <p class="mt-2 text-sm" style="color: hsl(var(--muted-foreground));">
        ğŸ–¼ï¸ AI-Powered Image Generation
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <div class="space-y-4">
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium", style: "color: hsl(var(--card-foreground));" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 appearance-none relative block w-full px-3 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:border-transparent sm:text-sm",
              style: "background-color: hsl(var(--background)); border-color: hsl(var(--border)); color: hsl(var(--foreground));",
              placeholder: "you@example.com" %>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium", style: "color: hsl(var(--card-foreground));" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "mt-1 appearance-none relative block w-full px-3 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:border-transparent sm:text-sm",
              style: "background-color: hsl(var(--background)); border-color: hsl(var(--border)); color: hsl(var(--foreground));",
              placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 rounded", style: "color: hsl(var(--primary)); border-color: hsl(var(--border));" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm", style: "color: hsl(var(--card-foreground));" %>
          </div>
        <% end %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Sign in",
            class: "group relative w-full flex justify-center py-3 px-4 border text-sm font-semibold rounded-lg hover-elevate transition-all duration-200",
            style: "background-color: hsl(var(--primary)); color: hsl(var(--primary-foreground)); border-color: hsl(var(--primary));" %>
      </div>
    <% end %>

    <!-- Links -->
    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>

  <script>
    // Dark mode toggle functionality
    const darkModeToggle = document.getElementById('dark-mode-toggle');
    const themeIcon = document.getElementById('theme-icon');
    const htmlElement = document.documentElement;

    // Set initial icon
    if (htmlElement.classList.contains('dark')) {
      themeIcon.textContent = 'â˜€ï¸';
    } else {
      themeIcon.textContent = 'ğŸŒ™';
    }

    darkModeToggle.addEventListener('click', () => {
      htmlElement.classList.toggle('dark');
      const isDark = htmlElement.classList.contains('dark');
      themeIcon.textContent = isDark ? 'â˜€ï¸' : 'ğŸŒ™';
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
  </script>
</div>
