<div class="min-h-screen flex flex-col lg:flex-row" style="background-color: hsl(var(--background));">
  <!-- Left side - Form -->
  <div class="flex-1 flex items-center justify-center p-8">
    <div class="w-full max-w-md">
      <!-- Logo -->
      <div class="mb-8">
        <div class="flex items-center gap-3 mb-3">
          <%= image_tag "dragon_wings_logo.png", alt: "Dragon Wings", class: "w-12 h-12" %>
          <div>
            <h1 class="text-2xl font-bold" style="color: hsl(var(--foreground));">Dragon Wings</h1>
            <p class="text-sm" style="color: hsl(var(--muted-foreground));">Solar AI Image Generator</p>
          </div>
        </div>
      </div>

      <!-- Form Card -->
      <div class="p-6 rounded-lg border" style="background-color: hsl(var(--card)); border-color: hsl(var(--card-border)); box-shadow: var(--shadow-xl);">
        <div class="mb-6">
          <h2 class="text-xl font-bold" style="color: hsl(var(--foreground));">Sign In</h2>
          <p class="text-sm mt-1" style="color: hsl(var(--muted-foreground));">Enter your credentials to access the platform</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <!-- Email Field -->
          <div>
            <%= f.label :email, "Email", class: "block text-sm mb-1", style: "color: hsl(var(--muted-foreground));" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "Enter your email",
                class: "w-full px-3 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500",
                style: "background-color: rgb(30, 41, 59); border-color: rgb(71, 85, 105); color: rgb(241, 245, 249);" %>
          </div>

          <!-- Password Field -->
          <div>
            <div class="flex items-center justify-between mb-1">
              <%= f.label :password, "Password", class: "text-sm", style: "color: hsl(var(--muted-foreground));" %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-xs text-cyan-400 hover:text-cyan-300 transition-colors" %>
            </div>
            <%= f.password_field :password,
                autocomplete: "current-password",
                placeholder: "Enter your password",
                class: "w-full px-3 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500",
                style: "background-color: rgb(30, 41, 59); border-color: rgb(71, 85, 105); color: rgb(241, 245, 249);" %>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded", style: "accent-color: rgb(8, 145, 178);" %>
              <%= f.label :remember_me, class: "ml-2 text-sm", style: "color: hsl(var(--muted-foreground));" %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <%= f.submit "Sign In",
              class: "w-full py-3 px-4 text-sm font-semibold rounded-lg transition-colors cursor-pointer bg-cyan-600 hover:bg-cyan-500 text-white border-0" %>
        <% end %>
      </div>

      <!-- Links -->
      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

  <!-- Right side - Hero -->
  <div class="hidden lg:flex flex-1 items-center justify-center p-12 relative overflow-hidden" style="background: linear-gradient(to bottom right, rgb(15, 23, 42), rgb(30, 41, 59), rgb(15, 23, 42));">
    <div class="relative z-10 max-w-lg">
      <h2 class="text-4xl font-bold mb-6" style="color: hsl(var(--foreground));">
        AI-Powered Image Generation Solar Energized
      </h2>
      <p class="text-lg mb-8" style="color: hsl(var(--muted-foreground));">
        Create stunning, professional-quality images using Stable Diffusion.
        Transform your ideas into visual reality with cutting-edge AI technology.
      </p>
      <div class="space-y-4">
        <!-- Feature 1 -->
        <div class="flex items-start gap-4">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(6, 182, 212, 0.2);">
            <span class="text-2xl">üé®</span>
          </div>
          <div>
            <h3 class="font-semibold mb-1" style="color: hsl(var(--foreground));">Unlimited Creativity</h3>
            <p class="text-sm" style="color: hsl(var(--muted-foreground));">
              Generate images from text descriptions with state-of-the-art Stable Diffusion models
            </p>
          </div>
        </div>
        <!-- Feature 2 -->
        <div class="flex items-start gap-4">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(34, 197, 94, 0.2);">
            <span class="text-2xl">‚òÄÔ∏è</span>
          </div>
          <div>
            <h3 class="font-semibold mb-1" style="color: hsl(var(--foreground));">Fast Generation</h3>
            <p class="text-sm" style="color: hsl(var(--muted-foreground));">
              Get high-quality results in seconds with optimized inference pipeline
            </p>
          </div>
        </div>
        <!-- Feature 3 -->
        <div class="flex items-start gap-4">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(249, 115, 22, 0.2);">
            <span class="text-2xl">üîí</span>
          </div>
          <div>
            <h3 class="font-semibold mb-1" style="color: hsl(var(--foreground));">Tiered Access</h3>
            <p class="text-sm" style="color: hsl(var(--muted-foreground));">
              Choose from Free, Maker, Pro, or Enterprise plans with flexible quotas
            </p>
          </div>
        </div>
        <!-- Feature 4 -->
        <div class="flex items-start gap-4">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(249, 115, 22, 0.2);">
            <span class="text-2xl">‚ö°</span>
          </div>
          <div>
            <h3 class="font-semibold mb-1" style="color: hsl(var(--foreground));">Energy & Source Tracking</h3>
            <p class="text-sm" style="color: hsl(var(--muted-foreground));">
              See the amount of energy it takes to generate images and have traceability to
