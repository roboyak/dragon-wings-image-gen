# Python Backend Configuration

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Stable Diffusion Model
# Options: "runwayml/stable-diffusion-v1-5", "stabilityai/stable-diffusion-xl-base-1.0"
MODEL_ID=runwayml/stable-diffusion-v1-5

# Model precision (fp32, fp16) - fp16 saves memory but requires GPU
MODEL_PRECISION=fp32

# Device (cuda, cpu, mps for Apple Silicon)
DEVICE=cpu

# Generation defaults
DEFAULT_STEPS=30
DEFAULT_GUIDANCE_SCALE=7.5
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512

# Output directory for generated images
OUTPUT_DIR=./generated_images

# Max concurrent generations
MAX_CONCURRENT_JOBS=2

# Hugging Face token (required for some models)
# Get yours at: https://huggingface.co/settings/tokens
HF_TOKEN=

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
